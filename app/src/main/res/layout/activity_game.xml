<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3E5F5"
    tools:context="com.example.rishabh.matchgame.GameActivity">

    <android.support.v7.widget.CardView
        android:visibility="invisible"
        app:cardCornerRadius="15dp"
        app:cardElevation="20sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
        android:textSize="25dp"
        android:text="NEXT"
        android:layout_centerInParent="true"
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>


<GridLayout
    android:id="@+id/grid1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:clipToPadding="true"
        app:cardBackgroundColor="#E1BEE7"
        app:cardCornerRadius="25dp"
        app:cardElevation="16dp"
        app:contentPadding="15sp">

        <ImageView
            android:src="@drawable/bird"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_marginStart="10dp"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="#E0F7FA"
        app:cardCornerRadius="25dp"
        app:cardElevation="16dp"
        app:contentPadding="15sp"
        tools:ignore="RtlCompat">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:src="@drawable/elephant" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="#C5CAE9"
        app:cardCornerRadius="25dp"
        app:cardElevation="16dp"
        app:contentPadding="15sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:src="@drawable/lion" />
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.Space
        android:layout_height="15dp"
        android:layout_width="match_parent"
        android:layout_row="1" />


    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_marginStart="10dp"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="#B2DFDB"
        app:cardCornerRadius="25dp"
        app:cardElevation="16dp"
        app:contentPadding="15sp"
        tools:ignore="RtlCompat">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:src="@drawable/panda" />
    </android.support.v7.widget.CardView>


</GridLayout>

    <!--for answer layout-->

    <GridLayout
        android:layout_marginTop="10dp"
        android:id="@+id/grid2"
        android:layout_below="@id/grid1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:background="#FFE082"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="200dp"
            android:layout_height="135dp"
            >
        <ImageView

            android:layout_weight="1"
            android:layout_gravity="top"
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="25sp"
                tools:text="Hello" />


        </RelativeLayout>

          <RelativeLayout
              android:background="#CCFF90"
            android:layout_row="0"
            android:layout_column="1"
              android:layout_gravity="end"
            android:layout_width="200dp"
            android:layout_height="135dp"
            >

              <ImageView

            android:layout_weight="1"
            android:layout_gravity="top"
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="25sp"
                tools:text="Hello" />


        </RelativeLayout>

          <RelativeLayout
              android:layout_gravity="bottom"
              android:background="#B2EBF2"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="200dp"
            android:layout_height="135dp">

              <ImageView

            android:layout_weight="1"
            android:layout_gravity="top"
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="25sp"
                tools:text="Hello" />

        </RelativeLayout>
          <RelativeLayout
              android:layout_gravity="end|bottom"
              android:background="#F8BBD0"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="200dp"
            android:layout_height="135dp">

              <ImageView

            android:layout_weight="1"
            android:layout_gravity="top"
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="25sp"
                tools:text="Hello" />

        </RelativeLayout>
    </GridLayout>


</RelativeLayout>
