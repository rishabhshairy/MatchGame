<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3E5F5"
    tools:context="play.GameActivity">

    <android.support.v7.widget.CardView
        android:visibility="invisible"
        android:id="@+id/buttonCard"
        app:cardCornerRadius="15dp"
        app:cardElevation="20sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
        android:textSize="25dp"
        android:text="NEXT"
        android:layout_centerInParent="true"
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>


    <GridLayout
        android:visibility="visible"
        android:id="@+id/grid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="175dp"
            android:layout_height="135dp"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:clipToPadding="true"
            app:cardBackgroundColor="#E1BEE7"
            app:cardCornerRadius="25dp"
            app:cardElevation="16dp"
            app:contentPadding="15sp">

            <ImageView
                android:id="@+id/drag1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bird" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="175dp"
            android:layout_height="135dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_marginStart="9dp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="#E0F7FA"
            app:cardCornerRadius="25dp"
            app:cardElevation="16dp"
            app:contentPadding="15sp"
            tools:ignore="RtlCompat">

            <ImageView
                android:id="@+id/drag2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:src="@drawable/elephant" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="175dp"
            android:layout_height="135dp"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="2"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="#C5CAE9"
            app:cardCornerRadius="25dp"
            app:cardElevation="16dp"
            app:contentPadding="15sp">

            <ImageView
                android:id="@+id/drag3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:src="@drawable/lion" />
        </android.support.v7.widget.CardView>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_row="1" />


        <android.support.v7.widget.CardView
            android:layout_width="175dp"
            android:layout_height="135dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_marginStart="9dp"
            android:layout_row="2"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="#B2DFDB"
            app:cardCornerRadius="25dp"
            app:cardElevation="16dp"
            app:contentPadding="15sp"
            tools:ignore="RtlCompat">

            <ImageView
                android:id="@+id/drag4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:src="@drawable/panda" />
        </android.support.v7.widget.CardView>


    </GridLayout>

    <!--for answer layout-->

    <GridLayout
        android:visibility="visible"
        android:padding="10dp"
        android:id="@+id/grid2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/grid1">

        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="#FFE082">

            <ImageView
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/answerText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:text="Hello" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_width="175dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="0"
            android:background="#CCFF90"
            android:layout_marginLeft="10dp">

            <ImageView

                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/answerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:text="Hello" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_gravity="bottom"
            android:layout_row="1"
            android:background="#B2EBF2">

            <ImageView

                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/answerText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:text="Hello" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_width="175dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_gravity="end|bottom"
            android:layout_row="1"
            android:background="#F8BBD0"
            android:layout_marginLeft="10dp">

            <ImageView

                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/answerText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:text="Hello" />

        </RelativeLayout>
    </GridLayout>


</RelativeLayout>
